import React from 'react';
import { action } from '@storybook/addon-actions';
import { text, color, select } from '@storybook/addon-knobs';
import {{pascalCase name}} from 'src/{{pascalCase name}}';
import withKnobs from '../../.storybook/withKnobs';

export default {
  title: '{{titleCase name}}',
  decorators: withKnobs,
};

export const defaultView = () => <{{pascalCase name}} />;

export const withThemeReact = () => {
  const themeText = color('Text', '#232361', 'Theme Colors');
  const themeTitleWeight = select(
    'Title Weight',
    {
      Weight300: 300,
      WeightNormal: 'normal',
      Weight500: 500,
      WeightBold: 'bold',
    },
    500,
    'Theme Props'
  );

  const customStyle = {
    '--rex-{{dashCase name}}-theme-text': themeText,
    '--rex-{{dashCase name}}-title-weight': themeTitleWeight,
  };

  return (
    <{{pascalCase name}} style={customStyle}>
      This is an example of Theme in React
    </{{pascalCase name}}>
  );
};

export const withThemeHTML = () => {
  const themeText = color('Text', '#232361', 'Theme Colors');
  const themeTitleWeight = select(
    'Title Weight',
    {
      Weight300: 300,
      WeightNormal: 'normal',
      Weight500: 500,
      WeightBold: 'bold',
    },
    500,
    'Theme Props'
  );

  const customStyle = `
    .rex-{{dashCase name}} {
      --rex-{{dashCase name}}-theme-text: ${themeText};
      --rex-{{dashCase name}}-title-weight: ${themeTitleWeight};
    }
  `;

  return (
    <>
      <style>{customStyle}</style>
